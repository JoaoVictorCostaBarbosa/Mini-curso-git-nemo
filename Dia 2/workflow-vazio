name: React App CI/CD

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]
  

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Instalar dependências
        run: npm install
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Checkout do código
        uses: actions/checkout@v4
      
      - name: Rodar testes
        run: npm test -- --watchAll=false

      - name: Build do projeto
        run: npm run build
